{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "act: Run GitHub Actions Workflow build-dev.yml to build arm container image",
      "type": "shell",
      "command": "act --platform ubuntu-latest=catthehacker/ubuntu:act-24.04 --container-architecture linux/amd64 --artifact-server-path /tmp/act-artifacts --workflows .github/workflows/build-dev.yml --use-new-action-cache --reuse",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Update vmlinux.h files",
      "command": "./update-vmlinux.h.sh",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    }
  ]
}
